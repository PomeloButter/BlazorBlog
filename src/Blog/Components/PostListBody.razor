@page "/PostListBody"
@inject Api Api
@inject NavigationManager NavigationManager
@if (_models != null)
{
    <div class="main">
        <div class="post-wrap archive">
            @foreach (var item in _models)
            {
                <h3>@item.Year</h3>
                foreach (var post in item.Posts)
                {
                    <article class="archive-item">
                        <a class="archive-item-link" href="/Posts/@post.Id">@post.Title</a>
                    
                        <span class="archive-item-date">@post.CreationTime</span>
                    </article>
                }
                
            }
        </div>
        <nav class="pagination">
            @for (var i = 1; i <= _totalPages; ++i)
            {
                if (PageIndex == i)
                {
                    <span class="page-number current">@i</span>
                }
                else
                {
                    <a class="page-number"  href="@BuildLink(i)" >@i</a>
                 
                }
            }
        </nav>
    </div>
}

@code {

    [Parameter]
    public int PageIndex { get; set; }
    int _totalPages;

    IEnumerable<PostViewModel>
    _models;

    protected override async Task OnParametersSetAsync()
    {
        var result = await Api.GetPostListAsync(PageIndex);
        _models = result.Data;
        _totalPages = result.TotalPage;
        PageIndex= PageIndex == 0 ? PageIndex = 1 : PageIndex;
    }

    protected override async Task OnInitializedAsync()
    {
      
        await OnParametersSetAsync();
    }

    private string BuildLink(int pageIndex)
    {
        string link = string.Empty;
        if (pageIndex > 0)
        {
            link = $"/Posts/{pageIndex}";
        }
        return link;
    }



}